    "deletable": true,
    "editable": true
   },
   "source": [
    "# generate random one letter messages\n",
    "def message1():\n",
    "    if random.random()<=0.7:\n",
    "        return 'A'\n",
    "    else:\n",
    "        return 'Z'"
   ]
  },
  {
   "cell_type": "raw",
   "metadata": {
    "collapsed": true,
    "deletable": true,
    "editable": true
   },
   "source": [
    "def entropy_of_list(l):\n",
    "    histogram = {x:(l.count(x)+0.0)/len(l) for x in l}\n",
    "    return sum([-x*log(x,2) for x in histogram.values()])"
   ]
  },
  {
   "cell_type": "raw",
   "metadata": {
    "collapsed": false,
    "deletable": true,
    "editable": true
   },
   "source": [
    "# generate random messages \n",
    "m = [message1() for i in range(1000)]\n",
    "\n",
    "# print empirical entropy of the message source\n",
    "print \"Empirical Entropy of source is:\", entropy_of_list(m)"
   ]
  },
  {
   "cell_type": "raw",
   "metadata": {
    "collapsed": false,
    "deletable": true,
    "editable": true
   },
   "source": [
