    "\n",
    "# Encrypt each message with a random key\n",
    "c=[S.enciphering(int(keygen()),S.encoding(x)) for x in m]\n",
    "\n",
    "print \"Empirical Entropy of ciphertext is:\", entropy_of_list(c)"
   ]
